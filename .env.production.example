# ==============================================================================
# HAMSVIC PRODUCTION ENVIRONMENT VARIABLES - AWS
# ==============================================================================
# Copy this file to .env on your production server
# NEVER commit actual .env to version control!

# ==============================================================================
# DJANGO CORE SETTINGS
# ==============================================================================
DEBUG=False
DJANGO_SECRET_KEY=CHANGE-THIS-TO-A-LONG-RANDOM-STRING-50-CHARS-MIN

# Your domain names (comma-separated, no spaces)
ALLOWED_HOSTS=hamsvic.com,www.hamsvic.com,api.hamsvic.com

# ==============================================================================
# DATABASE (AWS RDS PostgreSQL)
# ==============================================================================
DB_ENGINE=postgresql
DB_NAME=hamsvic_production
DB_USER=hamsvic_admin
DB_PASSWORD=YOUR-SECURE-DB-PASSWORD-HERE
DB_HOST=hamsvic-db.xxxxxxxxxx.ap-south-1.rds.amazonaws.com
DB_PORT=5432

# ==============================================================================
# AWS S3 STORAGE (for media files, Excel uploads/downloads)
# ==============================================================================
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=YOUR-AWS-SECRET-KEY-HERE
AWS_STORAGE_BUCKET_NAME=hamsvic-production-files
AWS_S3_REGION_NAME=ap-south-1

# ==============================================================================
# AWS ELASTICACHE REDIS (Caching, Sessions, Celery)
# ==============================================================================
REDIS_URL=redis://hamsvic-cache.xxxxxx.0001.aps1.cache.amazonaws.com:6379/0
CELERY_BROKER_URL=redis://hamsvic-cache.xxxxxx.0001.aps1.cache.amazonaws.com:6379/0
CELERY_RESULT_BACKEND=redis://hamsvic-cache.xxxxxx.0001.aps1.cache.amazonaws.com:6379/1
CELERY_TASK_ALWAYS_EAGER=False

# ==============================================================================
# AWS SES EMAIL (for OTP, notifications)
# ==============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=email-smtp.ap-south-1.amazonaws.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=AKIAXXXXXXXXXXXXXXXXXX
EMAIL_HOST_PASSWORD=YOUR-SES-SMTP-PASSWORD
DEFAULT_FROM_EMAIL=noreply@hamsvic.com

# ==============================================================================
# SECURITY (Required for HTTPS)
# ==============================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True

# ==============================================================================
# SENTRY ERROR MONITORING (Optional but recommended)
# ==============================================================================
SENTRY_DSN=https://xxxxxxxxxxxx@o123456.ingest.sentry.io/1234567

# ==============================================================================
# RAZORPAY PAYMENT GATEWAY (for subscriptions)
# ==============================================================================
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=YOUR-RAZORPAY-SECRET
RAZORPAY_WEBHOOK_SECRET=YOUR-WEBHOOK-SECRET
