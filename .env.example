# .env template
# Copy this to .env and fill in your values

# ==============================================================================
# DJANGO SETTINGS
# ==============================================================================
DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,example.com

# ==============================================================================
# DATABASE (PostgreSQL in production, SQLite in dev)
# ==============================================================================
# For SQLite (default, development only):
# DB_ENGINE=sqlite3

# For PostgreSQL:
DB_ENGINE=postgresql
DB_NAME=hamsvic_dev
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_HOST=localhost
DB_PORT=5432

# ==============================================================================
# FILE STORAGE (local in dev, S3/R2 in production)
# ==============================================================================
# For local file storage (development only):
# STORAGE_TYPE=local

# For Cloudflare R2 (RECOMMENDED - 10GB free):
# STORAGE_TYPE=r2
# AWS_ACCESS_KEY_ID=your-r2-access-key
# AWS_SECRET_ACCESS_KEY=your-r2-secret-key
# AWS_STORAGE_BUCKET_NAME=hamsvic
# AWS_S3_ENDPOINT_URL=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
# AWS_S3_REGION_NAME=auto

# For AWS S3:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=hamsvic-bucket
# AWS_S3_REGION_NAME=us-east-1

# For DigitalOcean Spaces:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-do-access-key
# AWS_SECRET_ACCESS_KEY=your-do-secret-key
# AWS_STORAGE_BUCKET_NAME=hamsvic-bucket
# AWS_S3_REGION_NAME=nyc3
# AWS_S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com

# Development default:
STORAGE_TYPE=local

# ==============================================================================
# CELERY & REDIS
# ==============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
REDIS_URL=redis://localhost:6379/2

# ==============================================================================
# EMAIL (for notifications, password resets, etc.)
# ==============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# ==============================================================================
# SENTRY (optional, for error tracking in production)
# ==============================================================================
# SENTRY_DSN=

# ==============================================================================
# OTHER SETTINGS
# ==============================================================================
TIMEZONE=UTC
